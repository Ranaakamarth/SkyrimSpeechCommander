<Window x:Class="Skyrim_SpeechCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Skyrim_SpeechCommander"
        Title="MainWindow" Height="500" Width="600"
        Background="#FAFAFAFA">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Grid.Row="0">
               <Button Name="ProfileTab_bttn"  Style="{StaticResource ResourceKey=SidebarStyle}" Click="ProfileTab_bttn_Click">
                Profile
            </Button>
            <Button Style="{StaticResource ResourceKey=SidebarStyle}">
                Actions
            </Button>
        </StackPanel>
        
        <v:Actions Grid.Column="1" Grid.Row="0">
            
        </v:Actions>
    </Grid>
</Window>
